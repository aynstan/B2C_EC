<%@ Master Language="C#" AutoEventWireup="true" CodeBehind="B2C_EC.master.cs" Inherits="B2C_EC.Website.B2C_EC" %>
<%@ Register assembly="AjaxControlToolkit" namespace="AjaxControlToolkit" tagprefix="asp" %>
<!DOCTYPE html>

<html xmlns="http://www.w3.org/1999/xhtml">
<head runat="server">
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <title>Welcome to E-commerce</title>
    <link rel="shortcut icon" type="image/x-icon" href="Resources/ImagesDesign/favicon.ico" />
    <link rel="stylesheet" type="text/css" href="Styles/style.css" media="screen" />
    <link rel="stylesheet" type="text/css" href="Styles/common.css" media="screen" />
    <link href="Styles/Popup.css" rel="stylesheet" />
    <link href="Styles/Control.css" rel="stylesheet" />
    <link href="Styles/calendar.css" rel="stylesheet" />
    <script src="Scripts/jquery-1.9.1.min.js" type="text/javascript"></script>
    <script src="Scripts/slides.min.jquery.js" type="text/javascript"></script>
    <script type="text/javascript">
        $(function () {
            $('.slides').slides({
                preload: true,
                generatePagination: true,
                play: 3000
            });
        });
    </script>
    <asp:ContentPlaceHolder ID="head" runat="server">
    </asp:ContentPlaceHolder>
</head>
<body>
    <form id="form1" runat="server">
        <asp:ToolkitScriptManager ID="ToolkitScriptManager1" runat="server"></asp:ToolkitScriptManager>
        <!--Wrapper-->
        <div id="wrapper">
            <!--Page-->
            <div class="page shadow">
                <!--Header-->
                <div id="header">
                    <div class="primary-section">
                        <div class="logo"><a href="Index.aspx">
                            <img src="Resources/ImagesDesign/Logo1.png" alt="logo" title="E-Commerce" /></a></div>
                        <asp:UpdatePanel ID="UpdatePanel1" runat="server">
                            <ContentTemplate>
                                <div class="header-aside">
                                    <span class="span">Call Us: +91 197 2735100</span>
                                    <ul>
                                        <li class="border">
                                            <asp:Label ID="lblMember" runat="server" Visible="false" Text=""></asp:Label>
                                            <asp:LinkButton ID="lnkSignIn" CssClass="log" runat="server" Visible="true" Text="LogIn"></asp:LinkButton>
                                        </li>
                                        <li>   
                                            <asp:LinkButton ID="lnkSignOut" CssClass="user" runat="server" Visible="false" Text="Log Out" OnClick="lnkSignOut_Click"></asp:LinkButton>                                         
                                            <asp:LinkButton ID="lnkRegister" CssClass="user" runat="server" PostBackUrl="~/Register.aspx">register</asp:LinkButton>
                                        </li>
                                        <!-- Login Pop Ajax Control Tool Kit -->
                                        <asp:ModalPopupExtender ID="ModalPopupLogin" runat="server" X="250"
                                            CancelControlID="btnClose" PopupDragHandleControlID="Panel2"
                                            PopupControlID="Panel1"
                                            TargetControlID="lnkSignIn">
                                        </asp:ModalPopupExtender>
                                        <li class="carts"><a href="ViewCart.aspx" class="cart">Shopping Cart</a></li>
                                    </ul>
                                </div>
                            </ContentTemplate>
                            <Triggers>
                                <asp:AsyncPostBackTrigger ControlID="btnOk" />
                            </Triggers>
                        </asp:UpdatePanel>
                    </div>
                    <div id="Login">
                        <asp:Panel ID="Panel1" CssClass="Popup" runat="server" Width="400px" Style="display: none;">
                            <asp:Panel ID="Panel2" CssClass="PopupTitle" runat="server">Login Form</asp:Panel>
                            <div class="PopupTable">                                
                            <asp:UpdatePanel ID="UpdatePanel3" runat="server">
                                <ContentTemplate>
                                <table width="100%" border="0" cellpadding="2" cellspacing="5">
                                    <tr>
                                        <td>&nbsp;</td>
                                        <td><asp:Label ID="lbLogin" runat="server" EnableViewState="false" ForeColor="Red" /></td>
                                    </tr>
                                    <tr>
                                        <td style="text-align: right; width: 120px;">
                                            <strong>Username :</strong>
                                        </td>
                                        <td>
                                            <asp:TextBox ID="txtUsername" CssClass="TextBox" placeholder="Input username" runat="server"></asp:TextBox></td>
                                    </tr>
                                    <tr>
                                        <td style="text-align: right"><strong>Password :</strong>
                                        </td>
                                        <td>
                                            <asp:TextBox ID="txtPassword" CssClass="TextBox" placeholder="Input password" runat="server" TextMode="Password"></asp:TextBox>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td style="text-align: right">&nbsp;</td>
                                        <td>                                                
                                                
                                        </td>
                                    </tr>
                                    <tr>
                                        <td></td>
                                        <td>
                                            <asp:Button ID="btnOk" runat="server" CssClass="Button" Text="Login" OnClick="Login" CausesValidation="False" />
                                            <asp:Button ID="btnClose" runat="server" CssClass="Button" Text="Cancel" />
                                        </td>
                                    </tr>
                                </table>
                                </ContentTemplate>
                                <Triggers>
                                    <asp:AsyncPostBackTrigger ControlID="btnOk" EventName="Click" />
                                </Triggers>
                            </asp:UpdatePanel>
                            </div>
                        </asp:Panel>
                    </div>
                    <div class="nav-section">
                        <ul class="navigation">
                            <li class="home"><a href="index.aspx" class="home">Home</a></li>
                            <li><a href="Services.aspx">Service </a></li>
                            <li><a href="Shops.aspx">Shops</a></li>
                            <li><a href="Index.aspx#Reviews" onclick="scrollto('Reviews');">Reviews</a></li>
                            <li><a href="NewProducts.aspx">New Products</a></li>
                            <li><a href="Specials.aspx">Specials</a></li>
                            <li><a href="Contact.aspx">Contact</a></li>
                        </ul>
                        <ul class="search-box">
                            <li>
                                <input type="text" placeholder="search" class="input" id="user_search" />
                            </li>
                            <li class="sms-last">
                                <input type="submit" value="" class="input submit" />
                                <a href="#">search</a></li>
                        </ul>
                    </div>
                </div>
                <!--Header-->
                <!--Content-->
                <div id="content">
                    <div class="sidebar">
                        <div class="latest-product">
                            <h2>Best Selling</h2>
                            <ul>
                                <asp:Repeater ID="rptProductBestSelling" runat="server" OnItemDataBound="rptProductBestSelling_ItemDataBound">
                                    <ItemTemplate>
                                        <li><asp:Image ID="imgProduct" runat="server" Width="30" />
                                        <div class="p-info"><span>Latest <%# Eval("Name") %></span><small><%# Eval("Price", "$ {0:#,##0}") %></small></div>
                                        <asp:HiddenField ID="HiddenFieldProductId" runat="server" Value='<%# Eval("ID") %>' /></li>
                                    </ItemTemplate>
                                </asp:Repeater>
                                <%--<li>
                                    <img src="Resources/ImagesDesign/valky.jpg" alt="valky" title="prodcut" />
                                    <div class="p-info"><span>Latest Apple iPhone 3G</span><small> &amp;190 </small></div>
                                </li>
                                <li>
                                    <img src="Resources/ImagesDesign/cell.jpg" alt="cell" title="product" class="c-cell" />
                                    <div class="p-info"><span>Latest Apple iPhone 3G</span><small>&amp;190</small></div>
                                </li>
                                <li>
                                    <img src="Resources/ImagesDesign/cell-btn.jpg" alt="btn" title="product" class="c-btn" />
                                    <div class="p-info"><span>Latest Apple iPhone 3G</span><small>&amp;190</small></div>
                                </li>--%>
                            </ul>
                            <a href="#">View More  <span>&raquo; </span></a>
                        </div>
                        <div class="latest-product ">
                            <h2>Our Services</h2>
                            <ul class="info">
                                <asp:Repeater ID="rptServices" runat="server">
                                    <ItemTemplate>
                                        <li><a href='<%# "FilterByService.aspx?ServiceID="+Eval("ID") %>'><%# Eval("Name") %></a></li>
                                    </ItemTemplate>
                                </asp:Repeater>
                                <%--<li><a href="#">Mobile</a></li>
                                <li><a href="#">Laptop</a></li>
                                <li><a href="#">Camera</a></li>
                                <li><a href="#">Ipod</a></li>
                                <li><a href="#">gravida auctor</a></li>--%>
                            </ul>
                            <a href="#" class="auct">View More <span>&raquo;</span></a>
                        </div>
                        <div class="latest-product">
                            <h2>Find us on Facebook</h2>
                            <div class="fb-like-box" data-href="https://www.facebook.com/laptrinhvienvietnam2013" data-colorscheme="light" data-show-faces="true" data-header="false" data-stream="false" data-show-border="false"></div>
                        </div>
                    </div>
                    <div class="content-right">
                        <div>
                            <asp:ContentPlaceHolder ID="Promotion" runat="server"></asp:ContentPlaceHolder>
                        </div>
                        <div>
                            <asp:ContentPlaceHolder ID="Filter" runat="server"></asp:ContentPlaceHolder>
                        </div>
                        <div>
                            <asp:ContentPlaceHolder ID="Content" runat="server"></asp:ContentPlaceHolder>
                        </div>
                        
                    </div>
                </div>
                <!-- Content-->
            </div>
            <!--Footer-->
            <div id="footer">
                <div class="footer-top">
                    <div class="page">
                        <div class="f-nav-section">
                            <ul>
                                <li><a href="index.aspx">Home</a></li>
                                <li><a href="Services.aspx">Service</a></li>
                                <li><a href="Shops.aspx">Shops</a></li>
                                <li><a href="Index.aspx#Reviews" onclick="scrollto('Reviews');">Reviews</a></li>
                                <li><a href="NewProducts.aspx">New Products</a></li>
                                <li><a href="Specials.aspx">Specials</a></li>
                                <li><a href="Contact.aspx" class="last">Contact</a></li>
                            </ul>
                            <div class="signup">
                                <ul>
                                    <li style="color:#CFCECE;padding-top:10px;font-size:16px;line-height:24px;text-transform:uppercase">
                                        Sign Up for Newsletter:
                                    </li>
                                    <li>
                                        <asp:TextBox ID="txtNewsletter" runat="server" placeholder="example@domain.com"/>
                                    </li>
                                    <li class="sms-last"><%--<a href="#" class="sms">sms</a>--%>
                                        <asp:LinkButton ID="lnksms" runat="server" CssClass="sms" OnClick="lnksms_Click"></asp:LinkButton>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="page">
                    <div class="footer-bottom">
                        <div class="copyright">
                            <ul>
                                <li>&copy; 2013 </li>
                                <li><a href="#" class="select">Webgranth</a> All Rights Reserved.</li>
                                <li class="last"><a href="#">Privacy Policy</a> </li>
                            </ul>
                        </div>
                        <div class="social-icon">
                            <ul>
                                <li><a href="#" class="facebook"></a></li>
                                <li><a href="#" class="twitter"></a></li>
                                <li class="sms-last"><a href="#" class="bing"></a></li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
            <!--Footer-->
        </div>
